//Multiply
LHLD 2501H
SPHL
LHLD 2503H
XCHG
LXI H,0000H
LXI B,0000H
LOOP: DAD SP
JNC LINE1
INX B
LINE1: DCX D
MOV A, E
ORA D
JNZ LOOP
SHLD 2506H
MOV L, C
MOV H, B
SHLD 2508H
HLT

//Divide
LXI B, 0000H  
LHLD 2503H  
XCHG
LHLD 2501H
LOOP2: MOV A, L
SUB E
MOV L, A
MOV A, H
SBB D
MOV H, A
JC LOOP1
INX B
JMP LOOP2
LOOP1: DAD D
SHLD 2506H
MOV L, C
MOV H, B
SHLD 2508H
HLT
